/**
 * @see Mage_Page_Block_Template_Links
 */
?>

<?php $_links = $this->getLinks(); ?>
<?php if (count($_links) > 0): ?>
    <ul class="links"<?php if ($this->getName()): ?> id="<?php echo $this->getName() ?>"<?php endif; ?>>
        <?php foreach ($_links as $_link): ?>
            <?php if ($_link instanceof Mage_Core_Block_Abstract): ?>
                <?php echo $_link->toHtml() ?>
            <?php else: ?>
                <li<?php if ($_link->getIsFirst() || $_link->getIsLast()): ?> class="<?php echo $_link->getTitle() ?> <?php if ($_link->getIsFirst()): ?>first<?php endif; ?><?php if ($_link->getIsLast()): ?> last<?php endif; ?>"<?php endif; ?> <?php echo $_link->getLiParams() ?>><?php echo $_link->getBeforeText() ?>
                    <span class="link-filter-a" onclick="inWin('<?php echo $_link->getUrl() ?>')"
                       title="<?php echo $_link->getTitle() ?>" <?php echo $_link->getAParams() ?>><?php echo $_link->getLabel() ?>
                    </span>
                    <?php echo $_link->getAfterText() ?>
                </li>
            <?php endif; ?>
        <?php endforeach; ?>
    </ul>
<?php endif; ?>
<style>
    .top-link li:first-child .link-filter-a {
        padding-left: 0;
    }

    .top-link li .link-filter-a {
        font-size: 12px;
        color: #ababab;
        text-transform: uppercase;
        padding: 0 15px 0 13px;
        line-height: 40px;
        font-weight: 300;
        display: inline-block;
        cursor: pointer;
    }
    .top-link li .link-filter-a:hover {
        color: #fff;
    }
</style>