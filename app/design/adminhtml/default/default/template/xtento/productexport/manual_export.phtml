<script type="text/javascript">
    Mage.Cookies.clear('fileDownload');
    Mage.Cookies.clear('lastMessage');
    Mage.Cookies.clear('lastErrorMessage');
    Event.observe('export_form', 'submit', function (event) {
        Mage.Cookies.clear('fileDownload');
        Mage.Cookies.clear('lastMessage');
        Mage.Cookies.clear('lastErrorMessage');
        $('success-msg').hide();
        $('warning-msg').hide();
        jQuery.blockUI({
            message:jQuery('#export_dialog'),
            css:{
                border:'none',
                padding:'15px',
                backgroundColor:'#000',
                '-webkit-border-radius':'10px',
                '-moz-border-radius':'10px',
                opacity:.6,
                color:'#fff'
            }
        });
        jQuery('#close').click(function () {
            jQuery.unblockUI();
            return false;
        });
        if ($('start_download').checked != true) {
            return false;
        }
        jQuery.fileDownload(jQuery(this).attr('action'), {
            successCallback:function (url) {
                xtHandleFileDownloadResponse();
            },
            failCallback:function (html, url) {
                xtHandleFileDownloadResponse();
            },
            httpMethod: 'POST',
            data: $(this).serialize()
        });
        Event.stop(event);
        return false;
    });
    function xtHandleFileDownloadResponse() {
        window.setTimeout(function () {
            jQuery.unblockUI({
                onUnblock:function () {
                    Mage.Cookies.clear('fileDownload');
                    $('messages').hide();
                    $('success-msg').show();
                    if (Mage.Cookies.get('lastMessage') != '' && Mage.Cookies.get('lastMessage') != null) {
                        $('success-msg-text').innerHTML = Mage.Cookies.get('lastMessage').replace(/\+/g, ' ');
                        Mage.Cookies.clear('lastMessage');
                    } else {
                        //$('success-msg-text').innerHTML = '<?php echo $this->__('Export completed successfully.')?>';
                        $('success-msg').hide();
                    }
                    if (Mage.Cookies.get('lastErrorMessage') != '' && Mage.Cookies.get('lastErrorMessage') != null) {
                        $('warning-msg-text').innerHTML = Mage.Cookies.get('lastErrorMessage').replace(/\+/g, ' ');
                        $('warning-msg').show();
                        Mage.Cookies.clear('lastErrorMessage');
                    } else {
                        $('warning-msg').hide();
                    }
                }
            });
        }, 100);
    }
</script>
