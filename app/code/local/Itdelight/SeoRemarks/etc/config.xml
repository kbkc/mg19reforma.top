<?xml version="1.0"?>
<config>
    <modules>
        <Itdelight_SeoRemarks>
            <version>0.0.9</version>
        </Itdelight_SeoRemarks>
    </modules>
    <global>
        <resources>
            <itdelight_seoremarks_setup>
                <setup>
                    <module>Itdelight_SeoRemarks</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </itdelight_seoremarks_setup>
        </resources>
        <helpers>
            <itdelight_seoremarks>
                <class>Itdelight_SeoRemarks_Helper</class>
            </itdelight_seoremarks>
        </helpers>
        <blocks>
            <page>
                <rewrite>
                    <switch>Itdelight_SeoRemarks_Block_Page_Switch</switch>
                </rewrite>
            </page>
            <checkout>
                <rewrite>
                    <cart_item_renderer>Itdelight_SeoRemarks_Block_Cart_Item_Renderer</cart_item_renderer>
                </rewrite>
            </checkout>
            <googletagmanager>
                <rewrite>
                    <order>Itdelight_SeoRemarks_Block_GoogleTagManager_Order</order>
                </rewrite>
            </googletagmanager>
        </blocks>
        <models>
            <catalog>
                <rewrite>
                    <product>Itdelight_SeoRemarks_Model_Product</product>
                </rewrite>
            </catalog>
        </models>
    </global>
    <frontend>
        <events>
            <controller_action_layout_render_before_blog_index_list>
                <observers>
                    <itdelight_seoremarks>
                        <type>singleton</type>
                        <class>Itdelight_SeoRemarks_Model_Observer</class>
                        <method>setBlogTitle</method>
                    </itdelight_seoremarks>
                </observers>
            </controller_action_layout_render_before_blog_index_list>
            <controller_action_postdispatch_catalog_product_view>
                <observers>
                    <itdelight_seoremarks>
                        <type>singleton</type>
                        <class>Itdelight_SeoRemarks_Model_Observer</class>
                        <method>productVars</method>
                    </itdelight_seoremarks>
                </observers>
            </controller_action_postdispatch_catalog_product_view>
        </events>
        <translate>
            <modules>
                <Itdelight_SeoRemarks>
                    <files>
                        <default>Itdelight_SeoRemarks.csv</default>
                    </files>
                </Itdelight_SeoRemarks>
            </modules>
        </translate>
    </frontend>
    <default>
        <blog>
            <blog>
                <page_title><![CDATA[Блог Реформа]]></page_title>
            </blog>
        </blog>
    </default>
</config>