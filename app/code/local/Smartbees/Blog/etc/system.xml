                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">homepage-blog</upload_dir>
                            <base_url type="media" scope_info="1">homepage-blog</base_url>
                            <sort_order>1</sort_order>
